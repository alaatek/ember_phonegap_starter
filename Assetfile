#end

input "css" do
  match "**/*.css" do
    filter(
        Rake::Pipeline::OrderingConcatFilter,
        [
            "bootstrap.min.css",
            "bootstrap-responsive.min.css",
            "highlight/sunburst.css"
        ],
        "app.css"
    )
  end
end

output ""

input "static" do
  match "index.html" do

    copy
  end
end

